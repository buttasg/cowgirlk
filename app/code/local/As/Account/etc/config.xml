<?xml version="1.0"?>
<config>
    <modules>
        <As_Account>
            <version>0.1.0</version>
        </As_Account>
    </modules>
    <frontend>
        <routers>
            <account>
                <use>standard</use>
                <args>
                    <module>As_Account</module>
                    <frontName>account</frontName>
                </args>
            </account>
        </routers>
        <layout>
            <updates>
                <account>
                    <file>account.xml</file>
                </account>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<account>
				<use>admin</use>
				<args>
					<module>As_Account</module>
					<frontName>account</frontName>
				</args>
			</account>
        </routers>
    </admin>
    <adminhtml>

		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<!--As_Account>
							<title>Account Module</title>
							<sort_order>10</sort_order>
						</As_Account>-->
						<account module="account">
							<children>
								<items module="account">
									<title>Manage Account</title>
									<sort_order>11</sort_order>
								</items>
							</children>
						</account>
						  <system>
                            <children>
                                <config>
                                    <children>
                                        <account>
                                            <title>Account Module</title>
                                        </account>
                                    </children>
                                </config>
                            </children>
                        </system>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<account>
					<file>account.xml</file>
				</account>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <account>
                <class>As_Account_Model</class>
                <resourceModel>account_mysql4</resourceModel>
            </account>
            <account_mysql4>
                <class>As_Account_Model_Mysql4</class>
                <entities>
                    <account>
                        <table>account</table>
                    </account>
                </entities>
            </account_mysql4>
        </models>
        <resources>
            <account_setup>
                <setup>
                    <module>As_Account</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </account_setup>
            <account_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </account_write>
            <account_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </account_read>
        </resources>
        <blocks>
            <account>
                <class>As_Account_Block</class>
            </account>
        </blocks>
        <helpers>
            <account>
                <class>As_Account_Helper</class>
            </account>
        </helpers>
        
        <rewrite>
        <login_redirect_url>
        <from>#^/customer/account/#</from>
        <to>/account/index/</to>
        </login_redirect_url>
        </rewrite>
        
    </global>
</config>
