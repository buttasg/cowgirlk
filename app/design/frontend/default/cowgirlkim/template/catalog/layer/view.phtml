/**
 * Category layered navigation
 *
 * @see Mage_Catalog_Block_Layer_View
 */
?>
<div class="left-container">
    <div class="category-left-link">
<?php echo $this->getLayout()->createBlock('core/template')->setTemplate('catalog/category/left.phtml')->toHtml()?>
<?php if($this->canShowBlock()): ?>

        <?php echo $this->getStateHtml() ?>
        <?php if ($this->getLayer()->getState()->getFilters()): ?>
            <div class="actions"><a href="<?php echo $this->getClearUrl() ?>"><?php echo $this->__('Clear All') ?></a></div>
        <?php endif; ?>
        <?php if($this->canShowOptions()): ?>
                <?php $_filters = $this->getFilters() ?>
                <?php foreach ($_filters as $_filter): ?>
              <?php  $filtername=$_filter->getName()?>
                <?php if(strtolower($filtername)!="category" && $_filter->getItemsCount()): ?>
                    <h2><?php echo $this->__($_filter->getName()) ?></h2>
                    <dd><?php echo $_filter->getHtml() ?></dd>
                <?php endif; ?>
                <?php endforeach; ?>
        <?php endif; ?>


<?php endif; ?>
<?php echo $this->getLayout()->createBlock('core/template')->setTemplate('catalog/category/featured.phtml')->toHtml()?>
<?php echo $this->getLayout()->createBlock('core/template')->setTemplate('catalog/product/gift_certificate.phtml')->toHtml()?>
</div>
    </div>
