foreach ($collection as $_category):

$name=$_helperCustom->ufcase($_category->getName());

 if($brandCategoryId==$_category->getId())
 {
 ?>
 <li><a href="<?php echo $brandUrl;?>" title="<?php echo $name;?>"><?php echo $name;?></a></li>
 <?php
 }
 else
 {
 ?>
<li><a href="<?php echo $_category->getUrl();?>" title="<?php echo $name;?>"><?php echo $name;?></a></li>

<?php
}
endforeach;
?>
</ul>
<?php
endif;
