$collection=$_helperCustom ->getFooterCategories();
if($collection->count()):
 $_helperBrands = Mage::helper('brand'); 
 $brandCategoryId=Mage::getStoreConfig('brand/brand/category_id');
$brandUrl=Mage::getUrl($_helperBrands->getBrandsUrl());
?>

<ul>
